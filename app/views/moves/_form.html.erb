<%= form_for(@move) do |f| %>
  <% if @move.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@move.errors.count, "error") %> prohibited this move from being saved:</h2>

      <ul>
      <% @move.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <fieldset>
    <legend>Attributes</legend>
    <div class="field floater" >
      <%= f.label :agility %><br>
      <%= f.text_field :agility %>
    </div>
    <div class="field floater">
      <%= f.label :strength %><br>
      <%= f.text_field :strength %>
    </div>
    <div class="field">
      <%= f.label :technical %><br>
      <%= f.text_field :technical %>
    </div>
    <div class="field floater">
      <%= f.label :risk %><br>
      <%= f.text_field :risk %>
    </div>
    <div class="field floater">
      <%= f.label :brawling %><br>
      <%= f.text_field :brawling %>
    </div>
    <div class="field">
      <%= f.label :durability %><br>
      <%= f.text_field :durability %>
    </div>
  </fieldset>
  <fieldset>
    <legend>Body Parts</legend>
    <div class="field floater" >
      <%= f.label :body_helper %><br>
      <%= f.collection_select :body_helper_id, BodyPart.order(:name), :id, :name, prompt: 'Choose one:' %>
    </div>
    <div class="field floater">
      <%= f.label :body_opp %><br>
      <%= f.collection_select :body_opp_id, BodyPart.order(:name), :id, :name, prompt: 'Choose one:' %>
    </div>
    <div class="field floater">
      <%= f.label :injure %><br>
      <%= f.text_field :injure %>
    </div>
  </fieldset>
  <div class="field">
    <%= f.label :move_type_id %><br>
    <%= f.collection_select :move_type_id, MoveType.order(:name), :id, :name, prompt: 'Choose one:' %>
  </div>
  <fieldset>
    <legend>Start Position</legend>
    <div class="field floater">
      <%= f.label 'Controller'%><br>
      <%= f.collection_select :control_start_pos_id, Position.order(:name), :id, :name, prompt: 'Choose one:' %>
    </div>
    <div class="field">
      <%= f.label 'Opponent' %><br>
      <%= f.collection_select :opp_start_pos_id, Position.order(:name), :id, :name, prompt: 'Choose one:' %>
    </div>
  </fieldset>
  <fieldset>
    <legend>Success</legend>
    <div class="field floater">
      <%= f.label 'Controller' %><br>
      <%= f.collection_select :control_success_pos_id, Position.order(:name), :id, :name, prompt: 'Choose one:' %>
    </div>
    </div>
    <div class="field">
      <%= f.label 'Opponent' %><br>
      <%= f.collection_select :opp_success_pos_id, Position.order(:name), :id, :name, prompt: 'Choose one:' %>
    </div>
  </fieldset>
  <fieldset>
    <legend>Failed</legend>
    <div class="field floater">
      <%= f.label 'Controller' %><br>
      <%= f.collection_select :control_fail_pos_id, Position.order(:name), :id, :name, prompt: 'Choose one:' %>
    </div>
    <div class="field">
      <%= f.label 'Opponent' %><br>
      <%= f.collection_select :opp_fail_pos_id, Position.order(:name), :id, :name, prompt: 'Choose one:' %>
    </div>
  <fieldset>
  <div class="field">
    <%= f.label :daze %><br>
    <%= f.text_field :daze %>
  </div>
  <div class="field">
    <%= f.label :special %><br>
    <%= f.text_area :special %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
